      <Label fx:id="teacher_disc" layoutX="268.0" layoutY="412.0" text="Teacher Discription">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="student_disc" layoutX="488.0" layoutY="412.0" text="Student Discription">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
    </children>
</AnchorPane>

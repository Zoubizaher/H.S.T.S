                <TableView fx:id="questionTable" prefHeight="331.0" prefWidth="806.0">
                </TableView>
            </children>
        </HBox>
        <VBox fx:id="coursesVBox" layoutX="14.0" layoutY="461.0" prefHeight="112.0" prefWidth="507.0">
            <children>
                <Button fx:id="UpdateExam" mnemonicParsing="false" onAction="#UpdateExam" prefHeight="54.0" prefWidth="118.0" text="Update Exam" />
            </children>
        </VBox>
        <VBox layoutX="14.0" layoutY="331.0" spacing="10">
            <Label text="Choose a Course:" />
            <ChoiceBox fx:id="courseChoiceBox" />
        </VBox>
      <Label layoutX="353.0" layoutY="348.0" text="Exam time (minutes):">
